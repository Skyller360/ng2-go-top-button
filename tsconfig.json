{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],

  "include": [
    "./index.ts",
    "./src/**/*"
  ],

  "angularCompilerOptions": {
    "genDir": "compiled",
    "debug": true,
    "skipMetadataEmit" : false,
    "strictMetadataEmit": true
  }
}